<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="Name: " />

    <EditText
        android:id="@+id/editText_name"
        android:layout_below="@id/textView_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView_name"
        android:hint="Enter"
        android:layout_marginStart="120dp"/>

    <TextView
        android:id="@+id/textView_surname"
        android:layout_below="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:text="Surname: " />

    <EditText
        android:id="@+id/editText_surname"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Enter"
        android:layout_alignBaseline="@id/textView_surname"
        android:layout_marginStart="160dp"/>

    <TextView
        android:id="@+id/textView_marks"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textView_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Marks: " />

    <EditText
        android:id="@+id/editText_marks"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Enter"
        android:layout_alignBaseline="@id/textView_marks"
        android:layout_marginStart="120dp"/>

    <TextView
        android:id="@+id/textView_id"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textView_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Id: " />

    <EditText
        android:id="@+id/editText_Id"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Enter"
        android:layout_alignBaseline="@id/textView_id"
        android:layout_marginStart="60dp"/>

    <Button
        android:id="@+id/addDataBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:text="Add Data" />

    <Button
        android:id="@+id/viewAllBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addDataBtn"
        android:layout_marginStart="150dp"
        android:layout_marginTop="350dp"
        android:text="View All" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="400dp"
        android:text="Update" />

    <Button
        android:id="@+id/delBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="400dp"
        android:text="Delete" />

</RelativeLayout>